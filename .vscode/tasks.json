{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake --build --preset ${command:cmake.activeBuildPresetName}",
            "problemMatcher": []
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "cmake --build --preset ${command:cmake.activeBuildPresetName} --target flash",
            "problemMatcher": []
        },
        {
            "label": "mspdebug-server",
            "type": "shell",
            "command": "cmake --build --preset ${command:cmake.activeBuildPresetName} --target mspdebug-server",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.*MSPDebug*",
                        "endsPattern": "^.*Bound*"
                    }
                }
            ]
        },
        {
            "label": "BuildAndServer",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "mspdebug-server"
            ]
        }
    ]
  }